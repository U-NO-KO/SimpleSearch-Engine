<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-search"></i> Поисковая система на Java</h1>
            <p>Простая реализация поиска с TF-IDF ранжированием</p>
        </div>
        
        <div class="search-section">
            <div class="search-box">
                <input type="text" id="search-input" 
                       placeholder="Введите поисковый запрос...">
                <button id="search-button">
                    <i class="fas fa-search"></i> Найти
                </button>
            </div>
            
            <div class="examples">
                <span>Примеры запросов:</span>
                <th:block th:each="example : ${examples}">
                    <span class="example-tag" th:text="${example}"
                          th:onclick="'searchExample(\'' + ${example} + '\')'"></span>
                </th:block>
            </div>
        </div>
        
        <div class="loading" id="loading">
            <i class="fas fa-spinner"></i>
            <p>Идёт поиск...</p>
        </div>
        
        <div class="results-section">
            <div id="results-container">
                <!-- Результаты появятся здесь -->
            </div>
        </div>
        
        <div class="add-document">
            <h3><i class="fas fa-plus-circle"></i> Добавить документ</h3>
            <textarea id="add-text" 
                      placeholder="Введите текст документа..."></textarea>
            <button id="add-button" class="search-button">
                <i class="fas fa-save"></i> Добавить в индекс
            </button>
        </div>
        
        <div class="footer">
            <p>Простая поисковая система &copy; 2024 | Работает на Java Spring Boot</p>
        </div>
    </div>
    
    <script>
        // Элементы DOM
        const searchInput = document.getElementById('search-input');
        const searchButton = document.getElementById('search-button');
        const resultsContainer = document.getElementById('results-container');
        const loading = document.getElementById('loading');
        const addButton = document.getElementById('add-button');
        const addText = document.getElementById('add-text');
        
        // Функция поиска
        async function performSearch(query) {
            if (!query.trim()) return;
            
            // Показываем индикатор загрузки
            loading.style.display = 'block';
            resultsContainer.innerHTML = '';
            
            try {
                const response = await fetch(`/search?q=${encodeURIComponent(query)}`);
                const data = await response.json();
                
                loading.style.display = 'none';
                
                if (data.count === 0) {
                    resultsContainer.innerHTML = `
                        <div class="results-header">
                            <h2>Результаты поиска</h2>
                            <span class="result-count">Ничего не найдено</span>
                        </div>
                        <div style="text-align: center; padding: 40px; color: #666;">
                            <i class="fas fa-search" style="font-size: 3em; margin-bottom: 15px;"></i>
                            <h3>По запросу "${data.query}" ничего не найдено</h3>
                            <p>Попробуйте изменить формулировку запроса</p>
                        </div>
                    `;
                    return;
                }
                
                let html = `
                    <div class="results-header">
                        <h2>Результаты поиска</h2>
                        <span class="result-count">Найдено: ${data.count} документов</span>
                    </div>
                `;
                
                data.results.forEach((result, index) => {
                    html += `
                        <div class="result-item">
                            <span class="result-score">${result.score}</span>
                            <div class="result-id">Документ #${result.id}</div>
                            <div class="result-preview">${result.preview}</div>
                            <small style="color: #888;">${result.text}</small>
                        </div>
                    `;
                });
                
                resultsContainer.innerHTML = html;
                
            } catch (error) {
                loading.style.display = 'none';
                resultsContainer.innerHTML = `
                    <div style="text-align: center; padding: 40px; color: #e53e3e;">
                        <i class="fas fa-exclamation-triangle" style="font-size: 3em;"></i>
                        <h3>Ошибка при выполнении поиска</h3>
                        <p>Пожалуйста, попробуйте позже</p>
                    </div>
                `;
                console.error('Search error:', error);
            }
        }
        
        // Функция добавления документа
        async function addDocument() {
            const text = addText.value.trim();
            if (!text) {
                alert('Введите текст документа');
                return;
            }
            
            try {
                const response = await fetch('/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `text=${encodeURIComponent(text)}`
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert(`Документ добавлен с ID: ${data.docId}\n${data.message}`);
                    addText.value = '';
                    // Автоматически выполняем поиск по новому документу
                    const words = text.split(/\s+/);
                    if (words.length > 0) {
                        searchInput.value = words[0];
                        performSearch(words[0]);
                    }
                }
            } catch (error) {
                alert('Ошибка при добавлении документа');
                console.error('Add error:', error);
            }
        }
        
        // Функция для примера запроса
        function searchExample(example) {
            searchInput.value = example;
            performSearch(example);
        }
        
        // Обработчики событий
        searchButton.addEventListener('click', () => performSearch(searchInput.value));
        
        searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') performSearch(searchInput.value);
        });
        
        addButton.addEventListener('click', addDocument);
        
        // Показываем приветственное сообщение при загрузке
        window.addEventListener('load', () => {
            resultsContainer.innerHTML = `
                <div style="text-align: center; padding: 40px; color: #666;">
                    <i class="fas fa-info-circle" style="font-size: 3em; margin-bottom: 15px;"></i>
                    <h3>Добро пожаловать в поисковую систему!</h3>
                    <p>Введите запрос в поле выше или выберите пример из списка</p>
                    <p style="margin-top: 20px; font-size: 0.9em;">
                        <i class="fas fa-database"></i> Система содержит ${document.querySelectorAll('.example-tag').length} примеров документов
                    </p>
                </div>
            `;
        });
    </script>
</body>
</html>
